<% content_for :head do %>
<script type="text/javascript">
function validate() {
	clear_help_values();
	$('submit').disabled = true;
	return true;
}
</script>
<% end %>

<h1>Confirm</h1>

<% unless order.errors.empty? %>
<div id="errors">
  <h2 style="margin-bottom:14px;color:red">Problems</h2>
  <ul>
  <% order.errors.each_full do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
</div>
<% end %>

<p>Your license key, along with your purchase receipt, will be emailed to your <%= address_name %>* address.</p>
<em>*You can easily pay by Credit Card without a PayPal account:<br>just select the option "Pay with a credit or debit card" on the next page.</em>

<div class="d cl"></div>

<div class="narrow">
	<% if order.items_count == 1 %>
	<h2>Your Item</h2>
	<% else %>
	<h2>Your Items</h2>
	<% end %>

	<table id="order">
		<% for item in @order.line_items %>
		<%   if item.quantity > 0 %>
		<tr>
			<td class="price"><%= item.quantity %> @ <%= number_to_currency item.unit_price %> each</td>
			<td class="prod"><%= item.product.name %></td>
		</tr>
		<%   end %>
		<% end %>
		<% if @order.coupon %>
		<tr>
			<td class="price">-<%= number_to_currency(@order.coupon_amount) %></td>
			<td><%= @order.coupon.description %></td>
		</tr>
		<% end %>
		<tr id="total">
			<td>Total:</td>
			<td><strong><%= number_to_currency @order.total %></strong></td>
		</tr>
	</table>

</div>

<% if not $STORE_PREFS['google_analytics_account'].blank? -%>
<script src="http://checkout.google.com/files/digital/urchin_post.js" type="text/javascript"></script>
<% end -%>
